<h1>Temas</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temas.each do |tema| %>
      <tr>
        <td><%= link_to tema.titulo, tema %></td>
        <td><%= button_to '+1', upvote_tema_path(tema), method: :post %></td>
        <td><%= pluralize(tema.votes.count, "vote") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tema', new_tema_path %>
